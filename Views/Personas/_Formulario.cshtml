@using NetCoreExample.Models

@model Persona

<form asp-action="Guardar" asp-controller="Personas" method="post">
    <div class="row">
        <input type="hidden" asp-for="PerId"></input>
        <div class="form-group col">
            <label> Nombre </label>
            <input type="text" asp-for="PerNombre" class="form-control">
            <span asp-validation-for="PerNombre" class="label label-danger" style="color: red;"></span>
        </div>
        <div class="form-group col">
            <label>Apellido</label>
            <input type="text" asp-for="PerApellido" class="form-control">
            <span asp-validation-for="PerApellido" class="label label-danger" style="color: red;"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col">
            <label>Identificacion</label>
            <input type="text" asp-for="PerIdentificacion" class="form-control">
            <span asp-validation-for="PerIdentificacion" class="label label-danger" style="color: red;"></span>
        </div>
        <div class="form-group col">
            <label>Direccion</label>
            <input type="text" asp-for="PerDireccion" class="form-control">
            <span asp-validation-for="PerDireccion" class="label label-danger" style="color: red;"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col">
            <label>Correo</label>
            <input type="email"  asp-for="PerEmail" class="form-control">
            <span asp-validation-for="PerEmail" class="label label-danger" style="color: red;"></span>
        </div>
        <div class="form-group col">
            <label>Fecha Nacimiento</label>
            <input type="datetime" asp-for="PerFecnac" class="form-control">
        </div>
    </div>
    <br>
    <div class="row">
        <button type="submit" class="btn btn-primary"> @(Model.PerId > 0 ?"ACTUALIZAR":"GUARDAR") </button>
    </div>
    <br>
</form>